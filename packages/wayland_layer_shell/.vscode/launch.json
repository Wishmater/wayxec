{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Flutter",
            "cwd": "example",
            "request": "launch",
            "type": "dart",
            "env": {
                "GDK_BACKEND": "wayland"
            }
        },
        {
            "name": "Debug native",
            "type": "cppdbg",
